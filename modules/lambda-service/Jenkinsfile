pipeline {
    agent any
    environment {
        JAVA_HOME='/Library/Java/JavaVirtualMachines/openjdk-13.0.1.jdk/Contents/Home/'
    }
    stages {
        stage("Checkout"){
            steps {
                checkout scm
            }
        }
        stage("Setup") {
            steps {
                sh './gradlew setup'
            }
        }
        stage("Build") {
            steps {
                sh './gradlew :modules:lambda-service:build -Pbuild_number=$BUILD_NUMBER'
            }
        }
    }

}